generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

// Criando uma migration: npx prisma migrate dev
// create-main-tables

model User {
    id         String    @id @default(uuid())
    name       String?
    password   String
    created_at DateTime? @default(now())
    updated_at DateTime? @default(now())
    user_data  UserData?

    @@map("users")
}

model UserData {
    id                             Int       @id @default(autoincrement())
    user_id                        String    @unique
    last_consumption               String
    record_no_consumption          Int
    record_no_consumption_formated String
    total_relapse                  Int
    score                          Int
    last_score_update              String?
    relapse_dates                  String    @db.VarChar(8000)
    created_at                     DateTime? @default(now())
    updated_at                     DateTime? @default(now())
    user                           User      @relation(fields: [user_id], references: [id])

    @@map("user_data")
}

model RelapseReasons {
    id         Int    @id @default(autoincrement())
    user_id    String
    reason     String
    created_at String

    @@map("relapse_reasons")
}

// create_table_push_tokens
model PushTokens {
    id    Int    @id @default(autoincrement())
    token String @unique

    @@map("push_tokens")
}
